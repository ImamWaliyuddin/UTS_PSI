<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/biodata"
        android:text="Biodata"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nama"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Nama: Imam Waliyuddin Rabbani"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/biodata"
        app:layout_constraintStart_toStartOf="@id/biodata"
        app:layout_constraintTop_toTopOf="@id/biodata" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nim"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="NIM: 205150201111009"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/nama"
        app:layout_constraintStart_toStartOf="@id/nama"
        app:layout_constraintTop_toTopOf="@id/nama" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/umur"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="Umur: 20 Tahun"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/nim"
        app:layout_constraintStart_toStartOf="@id/nim"
        app:layout_constraintTop_toTopOf="@id/nim" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ttl"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="TTL: Jakarta, 03 Maret 2002"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/umur"
        app:layout_constraintStart_toStartOf="@id/umur"
        app:layout_constraintTop_toTopOf="@id/umur" />
    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttl"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
